{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true,
        "lib": [
            "ESNext",
        ],
        "types": [
            "node"
        ],
        "useDefineForClassFields": false,
        "outDir": "dist-types",
        "emitDeclarationOnly": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "./ucpem.ts"
    ]
}
